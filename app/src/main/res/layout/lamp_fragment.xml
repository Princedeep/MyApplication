<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
android:gravity="top"
    android:weightSum="1">

    <RelativeLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@android:color/darker_gray">

        <TextView
            android:id="@+id/blinds_text_1"
            android:text="@string/blinds_1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"/>

        <ImageView
            android:id="@+id/blinds_up_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/l1"
            android:layout_toEndOf="@id/blinds_text_1"/>

        <Button
            android:text="Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b2"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="On"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/b3"
            android:layout_toEndOf="@+id/blinds_up_1"
            android:layout_marginStart="26dp"
            android:layout_alignParentTop="true" />


    </RelativeLayout>

    <Space
    android:layout_width="wrap_content"
    android:layout_height="30dp" />

<RelativeLayout
    android:padding="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_blue_light">

    <TextView
        android:id="@+id/blinds_text_2"
        android:text="@string/blinds_2"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/blinds_up_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/l2"
        android:layout_toEndOf="@id/blinds_text_2"/>



    <SeekBar
        android:id="@+id/seekbar_2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/blinds_up_2"
        android:gravity="center_vertical"/>

</RelativeLayout>

<Space
    android:layout_width="wrap_content"
    android:layout_height="30dp" />

<RelativeLayout
    android:padding="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:id="@+id/blinds_text_3"
        android:text="@string/blinds_3"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/blinds_up_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/l3"
        android:layout_toEndOf="@id/blinds_text_3"/>



    <SeekBar
        android:id="@+id/blinds_seekbar_3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_toEndOf="@id/blinds_up_3"

        android:gravity="center_vertical"/>

</RelativeLayout>


</LinearLayout>